<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Toolbar icons (back, overflow, menu icons) -->
        <item name="colorControlNormal">@color/snow_white</item>

        <!-- Other -->
        <item name="drawableIconColor">@color/cream</item>
    </style>

    <style name="LoadingDialogStyle"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
    </style>
</resources>